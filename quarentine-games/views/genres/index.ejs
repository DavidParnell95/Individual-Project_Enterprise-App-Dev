<div class="section">
    <h2 class="page-header">Genres</h2>
    <br>

    <a href="genre/new" class="site-btn" type="submit">New Genre</a>
        
    <br>
   
    <br>
        <% genres.forEach(genre => { %>
    
        <div class="col-lg-5 col-md-6 col-sm-4 card">
            <div class="genre-name"><%= genre.name %></div>
            <br>
            <div class="btn-row">
                <a class="genre-btn" href="/genres/<%= genre.id %>/edit">Edit</a>
                
                <%- include('../partials/deleteForm',
                { url: `/genres/${genre.id}` }) %>
            </div>
        </div>
    <% }) %>
</div>  
