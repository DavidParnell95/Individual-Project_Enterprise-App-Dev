<div class="section">
    <h2 class="page-header">Reviews</h2>
    <br>

    <a href="review/new" class="site-btn" type="submit">New Review</a>
        
    <br>
   
    <br>
        <% reviews.forEach(review => { %>
            <div class="col-lg-5 col-md-6 col-sm-4 card">
                <div class="review-name"><%= review.title %></div>
                <br>
                <div class="btn-row">
                    <a class="genre-btn" href="/review/<%= review.id %>/edit">Edit</a>
                
                    <%- include('../partials/deleteForm',
                    { url: `/review/${review.id}` }) %>
                </div>
            </div>
        <% }) %>
</div>  
